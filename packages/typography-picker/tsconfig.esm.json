{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESnext",
    "lib": ["es5", "es6", "dom", "dom.iterable", "esnext"],
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "files": ["src/themes.ts", "index.d.ts"],
  "include": ["src", "src/**/*"],
  "exclude": ["node_modules/**", "**/*.spec.ts", ".env"]
}
